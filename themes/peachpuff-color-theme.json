{
  "$schema": "vscode://schemas/color-theme",
  "name": "Peachpuff (vim-port)",
  "type": "light",
  "semanticHighlighting": true,

  "colors": {
    // "editor.background": "#FFDAB9",             // Normal guibg=PeachPuff
    "editor.background": "#FFE0BF",             // Normal guibg=PeachPuff
    "editor.foreground": "#000000",             // Normal guifg=Black
    "editorCursor.foreground": "#000000",       // Cursor (vim macht invert; wir nehmen gut sichtbares Schwarz)
    "editor.lineHighlightBackground": "#FFE7D4",
    "editorLineNumber.foreground": "#CD0000",   // LineNr guifg=Red3
    "editorWhitespace.foreground": "#EBD5C6",

    "editor.selectionBackground": "#EEC90066",  // Search/Visual Anmutung (Gold2 ~ #EEC900)
    "editor.inactiveSelectionBackground": "#EEC90033",
    "editor.findMatchBackground": "#EEC90066",  // Search guibg=Gold2
    "editor.findMatchHighlightBackground": "#EEC90033",

    "errorForeground": "#FFFFFF",
    "editorError.foreground": "#FF0000",
    "editorError.background": "#FF000033",        // ErrorMsg guibg=Red, guifg=White
    "editorWarning.foreground": "#FF0000",      // WarningMsg guifg=Red

    "statusBar.background": "#000000",          // StatusLine guibg=Black
    "statusBar.foreground": "#FFFFFF",          // StatusLine guifg=White
    "statusBar.noFolderBackground": "#000000",
    "statusBar.debuggingBackground": "#000000",

    "statusBarItem.remoteBackground": "#737373", // StatusLineNC/VertSplit grau
    "activityBar.background": "#737373",
    "sideBar.background": "#FFF2E4",

    "titleBar.activeBackground": "#737373",     // VertSplit guibg=Gray45
    "titleBar.activeForeground": "#FFFFFF",     // VertSplit guifg=White

    "list.activeSelectionBackground": "#CCCCCC", // Visual guifg=Grey80
    "list.hoverBackground": "#FFEEDD",

    "panel.border": "#737373",
    "editorGroup.border": "#737373",

    "tab.activeBackground": "#FFDAB9",
    "tab.inactiveBackground": "#F6E8D0",        // DiffDelete guibgâ‰ˆ
    "badge.background": "#CD1076",              // Title guifg=DeepPink3 Akzent
    "badge.foreground": "#FFFFFF",

    "diffEditor.insertedTextBackground": "#FFFFFF80", // DiffAdd guibg=White
    "diffEditor.removedTextBackground": "#F6E8D080",  // DiffDelete guibg=#f6e8d0
    "diffEditor.diagonalFill": "#EDB5CD80",           // DiffChange guibg=#edb5cd
    "editorGutter.addedBackground": "#2E8B57",        // SeaGreen
    "editorGutter.deletedBackground": "#FF0000",
    "editorGutter.modifiedBackground": "#6A5ACD"
  },

  "tokenColors": [
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#406090", "fontStyle": "italic" }
    },
    {
      "scope": ["constant", "constant.numeric", "constant.character", "constant.language"],
      "settings": { "foreground": "#C00058" }
    },
    {
      "scope": ["string", "markup.inline.raw.string"],
      "settings": { "foreground": "#C00058" }
    },
    {
      "scope": ["keyword", "storage.type", "storage.modifier", "storage"],
      "settings": { "foreground": "#A52A2A", "fontStyle": "bold" }
    },
    {
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#008B8B" }
    },
    {
      "scope": ["variable", "entity.name.variable", "meta.definition.variable"],
      "settings": { "foreground": "#000000" }
    },
    {
      "scope": ["support.type", "entity.name.type", "support.class", "storage.type.class"],
      "settings": { "foreground": "#2E8B57", "fontStyle": "bold" }
    },
    {
      "scope": ["entity.name.tag", "support.constant", "constant.other", "constant.other.symbol"],
      "settings": { "foreground": "#6A5ACD" }
    },
    {
      "scope": ["meta.preprocessor", "keyword.control.import", "keyword.control.directive"],
      "settings": { "foreground": "#CD00CD" }
    },
    {
      "scope": ["markup.heading"],
      "settings": { "foreground": "#CD1076", "fontStyle": "bold" }
    },
    {
      "scope": ["invalid", "invalid.illegal"],
      "settings": { "foreground": "#FF0000", "fontStyle": "bold" }
    },
    {
      "scope": ["markup.bold"],
      "settings": { "fontStyle": "bold" }
    },
    {
      "scope": ["markup.italic"],
      "settings": { "fontStyle": "italic" }
    },
    {
      "scope": ["todo", "keyword.other.todo", "comment.keyword.todo"],
      "settings": { "foreground": "#0000FF", "fontStyle": "bold" }
    }
  ]

}

